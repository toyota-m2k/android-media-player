<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExoPlayerHost">
        <attr name="showControlBar" format="boolean"/>
        <attr name="fitParent" format="boolean"/>
        <attr name="playerBackground" format="color"/>
    </declare-styleable>
    <declare-styleable name="ChapterView">
        <attr name="defaultColor" format="color"/>
        <attr name="enabledColor" format="color"/>
        <attr name="disabledColor" format="color"/>
        <attr name="tickColor" format="color"/>
        <attr name="markerColor" format="color"/>
        <attr name="bar_height" format="dimension"/>
        <attr name="bar_marker_margin" format="dimension"/>
        <attr name="marker_drawable" format="integer"/>
    </declare-styleable>
    <declare-styleable name="ControlPanel">
        <attr name="panelBackgroundColor" format="color"/>
        <attr name="panelForegroundColor" format="color"/>
<!--        <attr name="panelTextColor" format="color"/>-->
        <attr name="buttonTintColor" format="color"/>
        <attr name="buttonDisabledTintColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="PlayerSlider">
        <attr name="thumb" format="integer" />                  <!-- ThumbのDrawable (IntRes) -->
        <attr name="thumbVerticalOffset" format="dimension" />           <!-- ベースラインに対するThumbの垂直方向オフセット -->
        <attr name="thumbIconWidth" format="dimension" />           <!-- Thumbの幅（無指定ならdrawableから取得） -->
        <attr name="thumbIconHeight" format="dimension" />           <!-- Thumbの高さ（無指定ならdrawableから取得） -->
        <attr name="thumbHorizontalCenter" format="dimension" />           <!-- Thumbの左端から中央までの距離（無指定なら width/2） -->
        <attr name="thumbTintColor" format="color" />           <!-- Thumbの色 -->

        <attr name="marker" format="integer" />                  <!-- MarkerのDrawable (IntRes) -->
        <attr name="markerVerticalOffset" format="dimension" />           <!-- ベースラインに対するMarkerの垂直方向オフセット -->
        <attr name="markerIconWidth" format="dimension" />           <!-- Markerの幅（無指定ならdrawableから取得） -->
        <attr name="markerIconHeight" format="dimension" />           <!-- Markerの高さ（無指定ならdrawableから取得） -->
        <attr name="markerHorizontalCenter" format="dimension" />           <!-- Markerの左端から中央までの距離（無指定なら width/2） -->
        <attr name="markerTintColor" format="color" />           <!-- Markerの色 -->

        <attr name="railRightColor" format="color" />           <!-- Railの未再生部分の色 -->
        <attr name="railRightHeight" format="dimension" />           <!-- Railの未再生部分の高さ -->
        <attr name="railRightVerticalOffset" format="dimension" />           <!-- ベースラインに対するRailの未再生部分の垂直方向オフセット -->
        <attr name="railRightZOrder" format="dimension" />           <!-- Railの未再生部分のZOrder -->

        <attr name="railLeftColor" format="color" />           <!-- Railの再生済み部分の色 -->
        <attr name="railLeftHeight" format="dimension" />           <!-- Railの再生済み部分の高さ -->
        <attr name="railLeftVerticalOffset" format="dimension" />           <!-- ベースラインに対するRailの再生済み部分の垂直方向オフセット -->
        <attr name="railLeftZOrder" format="integer" />           <!-- Railの再生済み部分のZOrder -->

        <attr name="rangeEnabledColor" format="color" />           <!-- 有効範囲の色 -->
        <attr name="rangeEnabledHeight" format="dimension" />           <!-- 有効範囲の高さ -->
        <attr name="rangeEnabledVerticalOffset" format="dimension" />           <!-- ベースラインに対する有効範囲の垂直方向オフセット -->
        <attr name="rangeEnabledZOrder" format="integer" />           <!-- 有効範囲のZOrder -->

        <attr name="rangeDisabledColor" format="color" />           <!-- 無効範囲の色 -->
        <attr name="rangeDisabledHeight" format="dimension" />           <!-- 無効範囲の高さ -->
        <attr name="rangeDisabledVerticalOffset" format="dimension" />           <!-- ベースラインに対する無効範囲の垂直方向オフセット -->
        <attr name="rangeDisabledZOrder" format="integer" />           <!-- 無効範囲のZOrder -->

        <attr name="rangeTickColor" format="color" />           <!-- Tickの色 -->
        <attr name="rangeTickWidth" format="dimension" />           <!-- Tickの幅 -->
        <attr name="rangeTickHeight" format="dimension" />           <!-- Tickの高さ -->
        <attr name="rangeTickVerticalOffset" format="dimension" />           <!-- ベースラインに対するTickの垂直方向オフセット -->
        <attr name="rangeTickZOrder" format="integer" />           <!-- TickのZOrder -->

        <attr name="showChapterBar" format="boolean" />           <!-- Chaper Bar (RangeBar) を表示するか（デフォルト:true） -->
    </declare-styleable>

</resources>