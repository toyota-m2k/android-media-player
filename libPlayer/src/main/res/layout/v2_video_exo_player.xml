<?xml version="1.0" encoding="utf-8"?><FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/exp_player_root"
    >

    <FrameLayout
        android:id="@+id/exp_playerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        >
        <androidx.media3.ui.PlayerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/exp_playerView"
            app:use_controller="false"
            app:surface_type="texture_view"
            app:resize_mode="fit"
            />
        
        <!-- SurfaceView is more efficient than TextureView, but it cannot be rotated. -->
<!--        <androidx.media3.ui.PlayerView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:id="@+id/exp_playerView_surfaceView"-->
<!--            app:use_controller="false"-->
<!--            app:surface_type="surface_view"-->
<!--            app:resize_mode="fit"-->
<!--            android:visibility="gone"-->
<!--            />-->

        <ImageView
            android:id="@+id/exp_photoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/photo"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            />
    </FrameLayout>

    <FrameLayout
        tools:visibility="visible"
        android:id="@+id/service_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@color/transparent"
        >
        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:id="@+id/exp_progressRingMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="gone"
            android:background="@null"
            android:layout_margin="10dp"
            />
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/exp_progressRingLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="gone"
            android:background="@null"
            android:layout_margin="10dp"
            />
        <ProgressBar
            tools:visibility="visible"
            style="?android:attr/progressBarStyleSmall"
            android:id="@+id/exp_progressRingSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:visibility="gone"
            android:background="@null"
            android:layout_margin="8dp"
            />
        <TextView
            tools:text="something wrong"
            tools:visibility="visible"
            android:id="@+id/exp_errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/drawable_error_80"
            android:textColor="?attr/colorOnError"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="invisible"
            />

    </FrameLayout>

</FrameLayout>
